<%- include("_header") -%>

    <h1 class="mt-3">List of User</h1>

    <div class="table-responsive-sm">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-active">
                    <th class="text-center">ID</th>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th class="d-print-none text-center">
                        <a class="btn btn-sm btn-success" style="width: 80px;margin-left: 30%;" href="/create">Add</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                <% for (const user of model) { %>
                    <tr>
                        <td class="text-center">
                            <%= user.id %>
                        </td>
                        <td>
                            <%= user.username %>
                        </td>
                        <td>
                            <%= user.password %>
                        </td>
                        <td>
                            <%= user.email %>
                        </td>
                        <td>
                            <%= user.tel %>
                        </td>
                        <td class="d-print-none text-center">
                            <a class="btn btn-sm btn-warning" style="width: 80px;" href="/edit/<%= user.id %>">Edit</a>
                            <a class="btn btn-sm btn-danger" style="width: 80px;"
                                href="/delete/<%= user.id %>">Delete</a>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>

    <h6>Total of List (<%= model.length %>)</h6>

    <%- include("_footer") -%>